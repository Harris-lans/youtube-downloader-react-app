{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "app"
      },
      {
        "source": "/verify-url",
        "function": "verifyURL"
      },
      {
        "source": "/video-details",
        "function": "videoDetails"
      },
      {
        "source": "/download-video",
        "function": "downloadVideo"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
